@model IEnumerable<EntityLayer.Concrete.About>
@{
    ViewBag.Title = "UpdateAbout";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12">

    <div class="card card-primary">

        <div class="card-header">

            <h3 class="card-title">Hakkımızda Paneli
            
            </h3>

            <div class="card-tools">

                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">

                    <i class="fas fa-minus"></i>

                </button>

            </div>

        </div>
        @using (Html.BeginForm("UpdateAboutPost", "About", FormMethod.Post))
        {

            foreach (var item in Model)
            {
            <div class="card-body">
                


                <input hidden name="ID" value="@item.ID" />
                <input hidden name="Image" value="@item.Image1" />
                <input hidden name="Image2" value="@item.Image2" />
                <div class="form-group">

                    <label for="inputName">Hakkımızda İçerik 1</label>

                    <textarea id="inputDescription" name="Content1" class="form-control" rows="4">@item.Content1</textarea>

                </div>

                <div class="form-group">

                    <label for="inputDescription">Hakkımızda İçerik 2</label>

                    <textarea id="inputDescription" name="Content2" class="form-control" rows="4">@item.Content2</textarea>

                </div>
                <div class="form-group">
                    <div class="col-sm-6">
                        <div class="form-group">

                            <br />
                            <img src="~/Themes/AdminLTE-3.0.4/dist/img/photo2.png" name="ImageUrl" style="height:150px" />
                        </div>
                    </div>

                    <label for="exampleInputFile">Hakkımızda Görsel 1</label>
                    <div class="input-group">
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="exampleInputFile">
                            <label class="custom-file-label" for="exampleInputFile">Dosya seç</label>
                        </div>
                        <div class="input-group-append">
                            <span class="input-group-text" id="">Kaydet</span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-6">
                        <div class="form-group">

                            <br />
                            <img src="~/Themes/AdminLTE-3.0.4/dist/img/photo1.png" name="ImageUrl" style="height:150px" />
                        </div>
                    </div>

                    <label for="exampleInputFile">Hakkımızda Görsel 2</label>
                    <div class="input-group">
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="exampleInputFile">
                            <label class="custom-file-label" for="exampleInputFile">Dosya seç</label>
                        </div>
                        <div class="input-group-append">
                            <span class="input-group-text" id="">Kaydet</span>
                        </div>
                    </div>
                </div>
                <input type="submit" class="btn btn-info btn-sm" value="Güncelle" />

              
            </div>
            }

        }
    </div>

</div>







