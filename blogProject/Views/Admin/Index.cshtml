@model IEnumerable<EntityLayer.Concrete.Admin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int x = 0;
}
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kullanıcı Adı</th>
        <th>Role</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>

    @foreach (var item in Model)
    {
        x++;
<tr>

    <td>@x</td>
    <td>@item.UserName</td>
    <td>@item.AdminRole</td>

    @if (item.Status == true)
    {

        <td><span class="badge bg-success">Aktif</span></td>
        <td>
            <a class="btn btn-danger btn-sm" href="/Admin/ChangeStatus/@item.ID">
                <i class="fas fa-level-down-alt">
                </i>
                Pasif Yap
            </a>
        </td>

    }
    else
    {
        <td><span class="badge bg-danger">Pasif</span></td>
        <td>
            <a class="btn btn-success btn-sm" href="/Admin/ChangeStatus/@item.ID">
                <i class="fas fa-level-up-alt">
                </i>
                Aktif Yap
            </a>
        </td>
    }
    <td>
        <a class="btn btn-primary btn-sm" href="/Blog/BlogDetails/@item.ID">
            <i class="fas fa-pencil-alt">
            </i>
            Güncelle
        </a>
    </td>
</tr>
    }
</table>
<button class="btn btn-info" data-toggle="modal" data-target="#Modal1">Yeni Admin Ekle</button>

<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Yeni Admin Ekleme Paneli</h3>
            </div>
            <form action="/Admin/AddAdmin/" method="post">
                <div class="modal-body">
                    <label>Admin Kullanıcı Adı</label><br />
                    <input type="text" name="UserName" class="form-control" placeholder="Kullanıcı Adını Giriniz ..." />
                    <br />

                    <label>Admin Role</label><br />
                    <select name="AdminRole" class="form-control">
                        <option>Rol Seçiniz</option>
                        <option value="B">B</option>
                        <option value="C">C</option>
                        <option value="Y">Y</option>
                        <option value="Z">Z</option>
                    </select>
                    <br />

                    <label>Admin Şifre</label> <br />
                    <input type="password" name="Password" placeholder="Şifre Giriniz" class="form-control" />
                    <br /><br />
                    <input type="submit" class="btn btn-info" value="Admin Ekle" /><br />
                </div>
            </form>
        </div>
    </div>
</div>

