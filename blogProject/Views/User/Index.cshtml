@model EntityLayer.Concrete.Author
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="col-lg-4 col-xlg-3 col-md-12">
    <div class="white-box">

        <div class="user-bg">
            <img alt="user" src="@Model.ImageUrl">
            <div class="overlay-box">
                <div class="user-content">
                    <a href="javascript:void(0)">
                        <img src="@Model.ImageUrl"
                             class="thumb-lg img-circle" alt="img">
                    </a>
                    <h4 class="text-white mt-2">@Model.FirstName @Model.LastName</h4>
                    <h5 class="text-white mt-2">@Model.Mail</h5>
                </div>
            </div>
        </div>
        <div class="user-btm-box mt-5 d-md-flex">
            <strong> @Model.Title</strong>
        </div>
    </div>
</div>
<!-- Column -->
<!-- Column -->
<div class="col-lg-8 col-xlg-9 col-md-12">
    <div class="card">
        <div class="card-body">
            @using (Html.BeginForm("UpdateUser", "User", FormMethod.Post))
            {
                <input hidden name="AuthorID" value="@Model.AuthorID" />
                <input hidden name="ImageUrl" value="@Model.ImageUrl" />

                <div class="form-group mb-4">
                    <label class="col-md-12 p-0">İsim</label>
                    <div class="col-md-12 border-bottom p-0">
                        <input type="text" name="FirstName" value="@Model.FirstName"
                               class="form-control p-0 border-0">
                    </div>
                </div>
                <div class="form-group mb-4">
                    <label class="col-md-12 p-0">İsim</label>
                    <div class="col-md-12 border-bottom p-0">
                        <input type="text" name="LastName" value="@Model.LastName"
                               class="form-control p-0 border-0">
                    </div>
                </div>
                <div class="form-group mb-4">
                    <label class="col-md-12 p-0">Başlık</label>
                    <div class="col-md-12 border-bottom p-0">
                        <input type="text" name="Title" value="@Model.Title"
                               class="form-control p-0 border-0">
                    </div>
                </div>
                <div class="form-group mb-4">
                    <label for="example-email" class="col-md-12 p-0">E-posta</label>
                    <div class="col-md-12 border-bottom p-0">
                        <input type="email" placeholder="johnathan@admin.com"
                               class="form-control p-0 border-0" name="Mail" value="@Model.Mail"
                               id="example-email">
                    </div>
                </div>
                <div class="form-group mb-4">
                    <label class="col-md-12 p-0">Şifre</label>
                    <div class="col-md-12 border-bottom p-0">
                        <input type="password" name="Password" value="@Model.Password" class="form-control p-0 border-0">
                    </div>
                </div>
                <div class="form-group mb-4">
                    <label class="col-md-12 p-0">Telefon Numarası</label>
                    <div class="col-md-12 border-bottom p-0">
                        <input type="text" name="PhoneNumber" value="@Model.PhoneNumber"
                               class="form-control p-0 border-0">
                    </div>
                </div>
                <div class="form-group mb-4">
                    <label class="col-md-12 p-0">Hakkımda Yazısı</label>
                    <div class="col-md-12 border-bottom p-0">
                        <textarea class="form-control p-0 border-0" name="About">@Model.About</textarea>
                    </div>
                </div>

                <div class="form-group mb-4">
                    <div class="col-sm-12">
                        <button class="btn btn-success">Profil Bilgilerimi Değiştir</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

