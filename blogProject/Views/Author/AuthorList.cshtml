@model IEnumerable<EntityLayer.Concrete.Author>
@{
    ViewBag.Title = "AuthorList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



    <!-- Default box -->
    <div class="card card-solid">
        <div class="card-body pb-0">
            <div class="row d-flex align-items-stretch">
                @foreach (var item in Model)
                {
                    <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
                        <div class="card bg-light">
                            <div class="card-header text-muted border-bottom-0">
                                @item.Title
                            </div>
                            <div class="card-body pt-0">
                                <div class="row">
                                    <div class="col-7">
                                        <h2 class="lead"><b>@item.FirstName @item.LastName</b></h2>
                                        <p class="text-muted text-sm"><b>Hakkında: </b> @item.About</p>
                                        <ul class="ml-4 mb-0 fa-ul text-muted">
                                            <li class="small"><span class="fa-li"><i class="fas fa-lg fa-mail-bulk"></i></span> Mail: @item.Mail</li>
                                            <li class="small"><span class="fa-li"><i class="fas fa-lg fa-phone"></i></span> Mobil #: +90 @item.PhoneNumber</li>
                                        </ul>
                                    </div>
                                    <div class="col-5 text-center">
                                        <img src="@item.ImageUrl" alt="" class="img-circle img-fluid">
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <div class="text-right">
                                    <a href="#" class="btn btn-sm bg-teal">
                                        <i class="fas fa-comments"></i> Mesaj
                                    </a>
                                    <a href="/Blog/BlogListByCategory/@item.AuthorID" class="btn btn-sm btn-primary">
                                        <i class="fas fa-pencil-alt"></i> Blog Listesi
                                    </a>
                                    <a href="/Author/UpdateAuthor/@item.AuthorID" class="btn btn-sm btn-info">
                                        <i class="fas fa-edit"></i> Profil Güncelle
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }


            </div>
            <a class="btn btn-success btn-sm" href="/Author/AddAuthor/">Yeni Yazar Ekle</a>
            <br />
        </div>
        <br />
    </div>



