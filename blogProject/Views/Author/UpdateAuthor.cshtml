@model EntityLayer.Concrete.Author
@{
    ViewBag.Title = "UpdateAuthor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card card-success">
    <div class="card-header">
        <h3 class="card-title">Yazar Güncelleme Paneli</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <form class="form-group" role="form" method="post">
            <div class="row">
                <input hidden name="AuthorID" value="@Model.AuthorID"/>
                <input hidden name="ImageUrl" value="@Model.ImageUrl"/>
                <div class="col-sm-6">
                    <!-- text input -->
                    <div class="form-group">
                        <label>İsim</label>
                        <input type="text" value="@Model.FirstName" name="FirstName" class="form-control" placeholder="Zorunlu Alan Lütfen Giriniz...">
                    </div>
                </div>
                <div class="col-sm-6">
                    <!-- text input -->
                    <div class="form-group">
                        <label>Soyisim</label>
                        <input type="text" value="@Model.LastName" name="LastName" class="form-control" placeholder="Zorunlu Alan Lütfen Giriniz...">
                    </div>
                </div>
                <div class="col-sm-6">
                    <!-- text input -->
                    <div class="form-group">
                        <label>Başlık</label>
                        <input type="text"  value="@Model.Title"  class="form-control" name="Title" placeholder="Zorunlu Alan Lütfen Giriniz...">
                    </div>
                </div>
                <div class="col-sm-6">
                    <!-- text input -->
                    <div class="form-group">
                        <label>Mail</label>
                        <input type="text"  value="@Model.Mail" class="form-control" name="Mail" placeholder="Zorunlu Alan Lütfen Giriniz...">
                    </div>
                </div>
                <div class="col-sm-6">
                    <!-- text input -->
                    <div class="form-group">
                        <label>Telefon Numarası</label>
                        <input type="tel"  value="@Model.PhoneNumber" class="form-control" name="PhoneNumber" placeholder="Zorunlu Alan Lütfen Giriniz...">
                    </div>
                </div>
                <div class="col-sm-6">
                    <!-- text input -->
                    <div class="form-group">
                        <label>Şifre</label>
                        <input type="password"  value="@Model.Password" class="form-control" name="Password" placeholder="Zorunlu Alan Lütfen Giriniz...">
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-sm-6">
                    <!-- textarea -->
                    <div class="form-group">
                        <label>Hakkında yazısı</label>
                        <textarea class="form-control" value="@Model.About" name="About" rows="6" placeholder="Zorunlu Alan Lütfen Giriniz...">@Model.About</textarea>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Görsel(Varsayılan)</label>
                        <br />
                        <img src="@Model.ImageUrl" name="ImageUrl" style="height:150px" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="exampleInputFile">Yeni Görsel Ekle(Opsiyonel)</label>
                <div class="input-group">
                    <div class="custom-file">
                        <input type="file"  class="custom-file-input" id="exampleInputFile">
                        <label class="custom-file-label" for="exampleInputFile">Dosya seç</label>
                    </div>
                    <div class="input-group-append">
                        <span class="input-group-text" id="">Kaydet</span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <input type="reset" class="btn btn-danger" value="İptal Et" />
                </div>
                <div class="col-sm-6">
                    <input type="submit" class="btn btn-success" value="Bilgileri Güncelle" style="margin-left:80%" />
                </div>
            </div>
        </form>
    </div>
</div>

