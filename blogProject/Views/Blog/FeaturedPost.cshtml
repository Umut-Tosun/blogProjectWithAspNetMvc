<div class="site-section bg-light">
    <div class="container">
        <div class="row align-items-stretch retro-layout-2">
            <div class="col-md-4">
                <a href="/Blog/BlogDetails/@ViewBag.firstPostID" class="h-entry mb-30 v-height gradient" style="background-image: url('@ViewBag.firstPostImageUrl');">

                    <div class="text">
                        <h2>@ViewBag.firstPostTitle</h2>
                        <span class="date">@(((DateTime)ViewBag.firstPostDate).ToString("dd-MMM-yyyy"))</span>
                    </div>
                </a>
                <a href="/Blog/BlogDetails/@ViewBag.secondPostID"  class="h-entry v-height gradient" style="background-image: url('@ViewBag.secondPostImageUrl')">
                    <div class="text">
                        <h2>@ViewBag.secondPostTitle</h2>
                        <span class="date">@(((DateTime)ViewBag.secondPostDate).ToString("dd-MMM-yyyy"))</span>
                    </div>
                </a>
            </div>
            <div class="col-md-4">
                <a href="/Blog/BlogDetails/@ViewBag.thirdPostID" class="h-entry img-5 h-100 gradient " style="background-image: url('@ViewBag.thirdPostImageUrl');">

                    <div class="text">
                        <div class="post-categories mb-3">
                            <span class="post-category bg-danger">Yazılım</span>
                            <span class="post-category bg-primary">Algoritma</span>
                        </div>
                        <h2>@ViewBag.thirdPostTitle</h2>
                        <span class="date">@(((DateTime)ViewBag.thirdPostDate).ToString("dd-MMM-yyyy"))</span>
                    </div>
                </a>
            </div>
            <div class="col-md-4">
                <a href="/Blog/BlogDetails/@ViewBag.fourthPostID" class="h-entry mb-30 v-height gradient" style="background-image: url('@ViewBag.fourthPostImageUrl');">

                    <div class="text">
                        <h2>@ViewBag.fourthPostTitle</h2>
                        <span class="date">@(((DateTime)ViewBag.fourthPostDate).ToString("dd-MMM-yyyy"))</span>
                    </div>
                </a>
                <a href="/Blog/BlogDetails/@ViewBag.fifthPostID" class="h-entry v-height gradient" style="background-image: url('@ViewBag.fifthPostImageUrl');">

                    <div class="text">
                        <h2>@ViewBag.fifthPostTitle</h2>
                        <span class="date">@(((DateTime)ViewBag.fifthPostDate).ToString("dd-MMM-yyyy"))</span>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>
