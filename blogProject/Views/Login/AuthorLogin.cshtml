
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/Themes/login-form-02/fonts/icomoon/style.css">

    <link rel="stylesheet" href="~/Themes/login-form-02/css/owl.carousel.min.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/Themes/login-form-02/css/bootstrap.min.css">

    <!-- Style -->
    <link rel="stylesheet" href="~/Themes/login-form-02/css/style.css">

    <title>Yazar Giriş</title>
</head>
<body>


    <div class="d-lg-flex half">
        <div class="bg order-1 order-md-2" style="background-image: url('/Themes/login-form-02/images/bg_1.jpg');"></div>
        <div class="contents order-2 order-md-1">

            <div class="container">
                <div class="row align-items-center justify-content-center">
                    <div class="col-md-7">
                        <h3><strong>MVC5 BLOG PROJESİ</strong></h3>
                        <p class="mb-4">Projenin yazar paneline geçiş yapmak için lütfen bilgilerinizi giriniz.</p>
                        <form method="post">
                            <div class="form-group first">
                                <label for="username">Eposta</label>
                                <input type="email" class="form-control" placeholder="mail-adresin@gmail.com" name="Mail">
                            </div>
                            <div class="form-group last mb-3">
                                <label for="password">Şifre</label>
                                <input type="Password" class="form-control" placeholder="Şifren" name="Password">
                            </div>

                            <input type="submit" value="Giriş Yap" class="btn btn-block btn-primary">

                        </form>
                    </div>
                </div>
            </div>
        </div>


    </div>



    <script src="~/Themes/login-form-02/js/jquery-3.3.1.min.js"></script>
    <script src="~/Themes/login-form-02/js/popper.min.js"></script>
    <script src="~/Themes/login-form-02/js/bootstrap.min.js"></script>
    <script src="~/Themes/login-form-02/js/main.js"></script>
</body>
</html>
